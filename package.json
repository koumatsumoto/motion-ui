{
  "name": "motion-ui",
  "version": "0.0.1",
  "main": "dist/main.js",
  "repository": "git@github.com:kouMatsumoto/motion-ui.git",
  "author": "kou.matsumoto <kou.matsumoto.jp@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "yarn :build:dev:ts",
    "build:prod": "yarn build:prod:ts",
    "build:prod:ts": "webpack --config webpack.config.prod.js",
    "check:build:tsc": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.json --noEmit",
    "check:diff": "git diff --exit-code --name-only ./src",
    "ci:check": "yarn ci:check:build && yarn ci:check:test && yarn ci:check:lint",
    "ci:check:build": "yarn check:build:tsc && yarn build:prod:ts",
    "ci:check:lint": "yarn format && yarn check:diff",
    "ci:check:test": "yarn test:unit --ci --silent --detectOpenHandles --forceExit --collectCoverage",
    "format": "yarn lint:ts --fix && prettier --config .prettierrc --write '{deploy,src,.circleci,sandbox}/**/*.{ts,js,scss,html,md,yml}' ./*.{js,json}",
    "lint:ts": "eslint 'src/**/*.ts'",
    "jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest",
    "start:dev": "yarn build:dev && concurrently 'yarn :build:dev:ts:watch' 'browser-sync start --config bs-config.js'",
    "test:unit": "yarn jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 node_modules/.bin/ts-node --project tsconfig.json",
    ":build:dev:ts": "webpack --config webpack.config.dev.js",
    ":build:dev:ts:watch": "yarn :build:dev:ts -w"
  },
  "engines": {
    "node": ">= 13.0.0",
    "yarn": ">=1.19.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "rxjs": "7.0.0-alpha.0",
    "terser-webpack-plugin": "^2.3.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "typescript": "^3.7.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
